<Window x:Class="Bai.ControlTools.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bai.ControlTools" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>

        <Ellipse StrokeThickness="2">
            <Ellipse.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF87EEDD"/>
                    <GradientStop Color="#FF6977F2" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
        <Ellipse StrokeThickness="2" Margin="7">
            <Ellipse.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF87EEDD"/>
                    <GradientStop Color="#FF6977F2" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
        <ed:Arc  StartAngle="0" EndAngle="180" Stretch="None" StrokeThickness="7">
            <ed:Arc.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF87EEDD"/>
                    <GradientStop Color="#FF6977F2" Offset="1"/>
                </LinearGradientBrush>
            </ed:Arc.Stroke>
        </ed:Arc>
    </Grid>
</Window>
